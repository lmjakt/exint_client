#ifndef LOGINDIALOG_H
#define LOGINDIALOG_H

#include <qdialog.h>
#include <qstring.h>
#include <qlineedit.h>

using namespace std;

class LoginDialog : public QDialog
{
  Q_OBJECT

    public:
  LoginDialog(QString* lName, QString* lPasswd, QString* serverName, QWidget* parent=0, const char* name=0);
  
  private slots:
    void acceptChoices();   // i.e. check what's in the button and see what goes on.. 
  void cancel();

 private:
  QLineEdit* nameLine;
  QLineEdit* passwdLine;
  QLineEdit* serverLine;

  QString* uname;
  QString* passwd;
  QString* server;
};


#endif
