#ifndef CLUSTERLISTITEM_H
#define CLUSTERLISTITEM_H

#include "../client.h"
#include <qlistview.h>

using namespace std;

class ClusterListItem : public QListViewItem
{
  Q_OBJECT
    
    public :
    ClusterListItem(clusterSet* cs, int i, QListViewItem* parent);

  virtual int compare(QListViewItem* i, int col, bool ascending);
  virtual int rtti(){
    return(25476);
  };
  clusterSet* cluster(){
    return(cSet);
  }
  int clusterNo(){
    return(clusterNumber);
  }
  private :
    clusterSet* cSet;
  int clusterNumber;
};

#endif
