#ifndef PASSWDCHANGE_H
#define PASSWDCHANGE_H

#include <qwidget.h>
#include <qstring.h>
#include <qlineedit.h>

using namespace std;

class PasswdChange : public QWidget
{
  Q_OBJECT

    public:
  PasswdChange::PasswdChange(QWidget* parent=0, const char* name=0);

  public slots:
    void passwordChanged(bool ok);
  void passWordError();

  private slots:
    void change();
  void cancel();       

 private:
  QLineEdit* old;
  QLineEdit* new1;
  QLineEdit* new2;

 signals:
  void changePasswd(QString, QString);      // old first, then new.. 
};

#endif

  
