#infdef SESSIONWIDGET_H
#define SESSIONWIDGET_H

#include <qwidget.h>
#include <set>
#include <QString>

using namespace std;

class SessionWidget : public QWidget
{
  Q_OBJECT

    public :
    SessionWidget(set<int>& g, set<QString>& kwd, QString& ti, QString& des, QWidget* parent=0, const char* name=0);
  SessionWidget(QWidget* parent=0, const char* name=0);

  set<int> geneIds();
  set<QString> sessionkeyWords();
  QString sessionTitle();
  QString sessionDescription();       // functions for getting the titles and so forth.
  bool canEdit(); 

  private :
    set<int> genes;
  set<QString> keyWords;
  QString description;
  QString title;
  bool readOnly;

  signals :
    void displayMe();
  void includeMe();
};

#endif
  
